@page
@model ExerciseVideo.Pages.CreateWorkoutModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Create a New Workout</title>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>

<body class="body">

    <h1 class="fs-1">New Workout:</h1>
    <br />

    <form method="post">

        <div>
            <label for="Title" class="control-label">Workout title:</label>
            <br />
            <input type="text" name="Title" value="" />
            <br />
        </div>

        <br />

        <div>
            <label class="control-label">Play audio for:</label>
            <br />
            <input type="checkbox" name="AudioSpeakExercise" value="true" />
            <label for="AudioSpeakExercise">Name of exercise</label>
            <br />
            <input type="checkbox" name="AudioSpeakGo" value="true" />
            <label for="AudioSpeakGo">Start of exercise</label>
            <br />
            <input type="checkbox" name="AudioSecondTick" value="true" />
            <label for="AudioSecondTick">Tick for each second</label>
            <br />
            <input type="checkbox" name="AudioEndExercise" value="true" />
            <label for="AudioSpeakGo">End of exercise</label>
            <br />
        </div>

        <br />

        <div>
            <label for="TransitionTime" class="control-label">Seconds for transition between exercises:</label>
            <br />
            <input type="number" name="TransitionTime" value="0" min="0" max="10" step="1" />
            <br />
        </div>

        <br />

        <div>
            <input type="submit" value="Submit" asp-page-handler="Submit" />
        </div>

    </form>

</body>

</html>
